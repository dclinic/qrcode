@model List<eCommerceApp.Models.tblProduct>

@{
    Layout = null;
}

<html>
<head>
    <title>PRINT</title>
</head>
<body style="margin: 0;">
    <img src="~/one.png" />

    @foreach (var item in Model.Take(1))
    {
        string qrcode = "/QR/" + item.UID + ".png";

        <div style="left: 105px; position: absolute; top: 45px;">
            <img src="@qrcode" style="height: 140px; width: 140px;" />
            <span style="font-size: 28px;margin-left: 90px; margin-top: -9px; position: absolute;">@item.GTN</span>
            <span style="font-size: 28px;margin-left: 230px; margin-top: -117px; position: absolute;">@item.UID</span>
            @*<span style="font-family:Agency FB; font-size: 28px; font-weight: bold; margin-left: 150px; margin-top: -88px; position: absolute;">GMP</span>
            <span style="font-family:Agency FB; font-size: 28px; font-weight: bold; margin-left: 206px; margin-top: -90px; position: absolute;">:</span>
            <span style="font-size: 28px;margin-left: 230px; margin-top: -85px; position: absolute;">@item.GMP</span>*@
            <span style="font-size: 28px;margin-left: 230px; margin-top: -54px; position: absolute;">@item.LOT</span>
            <span style="font-size: 28px;margin-left: 230px; margin-top: -22px; position: absolute;">@item.Expiry.Value.ToString("yyyy/MM")</span>
        </div>
    }
</body>
</html>